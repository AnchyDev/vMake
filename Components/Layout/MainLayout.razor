@inherits LayoutComponentBase

<div class="chrome">
    <div class="chrome-top">
        <div class="chrome-title">
            vMake
        </div>
        <div class="chrome-actions">
            <a href="#" @onclick="Minimize">
                <i class="bi bi-dash"></i>
            </a>
            <a href="#" @onclick="MaximizeAsync">
                <i class="bi bi-arrows-angle-@(maximizeState ? "contract" : "expand")"></i>
            </a>
            <a href="#" class="exit" @onclick="Exit">
                <i class="bi bi-x"></i>
            </a>
        </div>
    </div>

    <main class="chrome-bottom">
        <div class="sidebar">
            <NavMenu />
        </div>

        <div class="content">
            @Body
        </div>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
